<UserControl x:Class="anime_downloader.Views.Components.DownloadLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:anime_downloader.ViewModels.Components"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:anime_downloader.Views.Components"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <TextBox Background="#ECECEC"
             BorderThickness="0"
             FontFamily="Segoe UI Light"
             VerticalContentAlignment="Top"
             HorizontalContentAlignment="Left"
             FontSize="22"
             IsReadOnly="True"
             Text="{Binding Text}"
             TextWrapping="Wrap"
             VerticalScrollBarVisibility="Auto" />
</UserControl>