<UserControl x:Class="anime_downloader.Views.Components.Dialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:anime_downloader.ViewModels.Components"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:anime_downloader.Views.Components"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Width="400"
             d:DataContext="{d:DesignInstance components:DialogViewModel}"
             Background="{StaticResource MaterialDesignBackground}"
             TextElement.FontSize="16"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             mc:Ignorable="d">
    <DockPanel Margin="16">
        <Button Content="Close"
                HorizontalAlignment="Center"
                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                FocusVisualStyle="{x:Null}"
                DockPanel.Dock="Bottom"
                IsDefault="True" />
        <TextBlock HorizontalAlignment="Center"
                   Margin="0, 20"
                   Text="{Binding Message}"
                   TextWrapping="WrapWithOverflow" />
    </DockPanel>
</UserControl>
