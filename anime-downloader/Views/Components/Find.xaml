<UserControl x:Class="anime_downloader.Views.Components.Find"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:anime_downloader.ViewModels.Components"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:anime_downloader.Views.Components"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:xaml="clr-namespace:anime_downloader.Classes.Xaml"
             d:DataContext="{d:DesignInstance components:FindViewModel}"
             mc:Ignorable="d">
    <TextBox Width="400"
             Height="30"
             VerticalContentAlignment="Center"
             FontSize="18"
             Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
             Visibility="{Binding Visible}">
        <TextBox.InputBindings>
            <KeyBinding Key="Escape" Command="{Binding ClearCommand}" />
        </TextBox.InputBindings>
    </TextBox>
</UserControl>
