<UserControl x:Class="anime_downloader.Views.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:classes="clr-namespace:anime_downloader.Classes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:anime_downloader.ViewModels"
             xmlns:xaml="clr-namespace:anime_downloader.Classes.Xaml"
             d:DataContext="{d:DesignInstance viewModels:SettingsViewModel}"
             d:DesignHeight="360"
             d:DesignWidth="680"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="{x:Type Label}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontFamily" Value="{StaticResource MainFont}" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="TextboxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Height" Value="33" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="16" />
        </Style>
        <Style x:Key="CheckboxStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <!--  Episode path  -->
                <Label Grid.Row="0"
                       Grid.Column="0"
                       Content="Episode downloads to: "
                       Style="{DynamicResource LabelStyle}"
                       ToolTip="Path to where episodes will be downloaded to." />
                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Style="{DynamicResource TextboxStyle}"
                         Text="{Binding Settings.PathConfig.Unwatched,
                                        UpdateSourceTrigger=PropertyChanged}" />

                <!--  Watched path  -->
                <Label Grid.Row="1"
                       Grid.Column="0"
                       Content="Watched files to: "
                       Style="{DynamicResource LabelStyle}"
                       ToolTip="Path where watched episodes will be moved to." />
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Style="{DynamicResource TextboxStyle}"
                         Text="{Binding Settings.PathConfig.Watched,
                                        UpdateSourceTrigger=PropertyChanged}" />

                <!--  Torrent  -->
                <Label Grid.Row="2"
                       Grid.Column="0"
                       Content="Torrent downloads to: "
                       Style="{DynamicResource LabelStyle}"
                       ToolTip="Path to the folder that all .torrent files will be downloaded into." />

                <TextBox Grid.Row="2"
                         Grid.Column="1"
                         Style="{DynamicResource TextboxStyle}"
                         Text="{Binding Settings.PathConfig.Torrents,
                                        UpdateSourceTrigger=PropertyChanged}" />

                <!--  Download  -->
                <Label Grid.Row="3"
                       Grid.Column="0"
                       Content="uTorrent exe file: "
                       Style="{DynamicResource LabelStyle}"
                       ToolTip="Path to uTorrent.exe." />
                <TextBox Grid.Row="3"
                         Grid.Column="1"
                         Style="{DynamicResource TextboxStyle}"
                         Text="{Binding Settings.PathConfig.TorrentDownloader,
                                        UpdateSourceTrigger=PropertyChanged}" />

                <!--  Subgroups  -->
                <Label Grid.Row="4"
                       Grid.Column="0"
                       Content="Whitelist subgroups: "
                       Style="{DynamicResource LabelStyle}"
                       ToolTip="A comma + space (', ') separated list of preferred subgroups, e.g. '{subgroup1}, {subgroup2}, {subgroup3}'" />
                <TextBox Grid.Row="4"
                         Grid.Column="1"
                         Style="{DynamicResource TextboxStyle}"
                         Text="{Binding Subgroups}" />
            </Grid>
            <Grid Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <!--  Exit  -->
                    <Label Grid.Row="0"
                           Grid.Column="0"
                           Content="Exit to tray:"
                           Style="{DynamicResource LabelStyle}"
                           ToolTip="Instead of closing the program on exit, it is brought to the tray." />
                    <CheckBox Grid.Row="0"
                              Grid.Column="1"
                              IsChecked="{Binding Path=Settings.FlagConfig.ExitOnClose,
                                                  UpdateSourceTrigger=PropertyChanged,
                                                  Converter={StaticResource NotConverter}}"
                              Style="{DynamicResource CheckboxStyle}" />

                    <!--  AlwaysTray  -->
                    <Label Grid.Row="1"
                           Grid.Column="0"
                           Content="Keep tray open:"
                           Style="{DynamicResource LabelStyle}"
                           ToolTip="Always have the tray enabled." />
                    <CheckBox Grid.Row="1"
                              Grid.Column="1"
                              Command="{Binding TrayToggleCommand}"
                              IsChecked="{Binding Settings.FlagConfig.AlwaysShowTray,
                                                  UpdateSourceTrigger=PropertyChanged}"
                              Style="{DynamicResource CheckboxStyle}" />
                </Grid>
                <Grid Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <!--  Whitelisted  -->
                    <Label Grid.Row="0"
                           Grid.Column="0"
                           Content="Only whitelisted subs: "
                           Style="{DynamicResource LabelStyle}"
                           ToolTip="Whether or not to only download from subgroups that are on the whitelisted subgroups list." />
                    <CheckBox Grid.Row="0"
                              Grid.Column="1"
                              IsChecked="{Binding Settings.FlagConfig.OnlyWhitelisted,
                                                  UpdateSourceTrigger=PropertyChanged}"
                              Style="{DynamicResource CheckboxStyle}" />

                    <!--  Named folders  -->
                    <Label Grid.Row="1"
                           Grid.Column="0"
                           VerticalAlignment="Top"
                           Content="Show named folders:"
                           Style="{DynamicResource LabelStyle}"
                           ToolTip="Put each episode inside a folder named after the show" />
                    <CheckBox Grid.Row="1"
                              Grid.Column="1"
                              IsChecked="{Binding Settings.FlagConfig.IndividualShowFolders,
                                                  UpdateSourceTrigger=PropertyChanged}"
                              Style="{DynamicResource CheckboxStyle}" />
                </Grid>
            </Grid>
        </Grid>
        <DockPanel Grid.Row="1">
            <Label HorizontalAlignment="Left" VerticalAlignment="Center">
                <Label.Style>
                    <Style TargetType="Label">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ChangeMade}" Value="True">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <TextBlock FontSize="14" Foreground="Red">
                                            <Italic>*Unsaved changes pending</Italic>
                                        </TextBlock>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
            <Button HorizontalAlignment="Right"
                    Command="{Binding SaveCommand}"
                    Content="Edit" />
        </DockPanel>
    </Grid>
</UserControl>