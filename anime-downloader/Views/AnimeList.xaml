<UserControl x:Class="anime_downloader.Views.AnimeList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:classes="clr-namespace:anime_downloader.Classes"
             mc:Ignorable="d"
             d:DesignHeight="340" d:DesignWidth="660">
    <Grid>
        <Grid.Background>White</Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DataGrid"
                Grid.Row="0"
                AutoGenerateColumns="False"
                CanUserResizeRows="False"
                CanUserAddRows="False"
                UseLayoutRounding="False"
                SelectionUnit="Cell" IsReadOnly="True"
                FocusVisualStyle="{x:Null}"
                RowHeaderWidth="0"
                HorizontalContentAlignment="Center"
                GridLinesVisibility="None" BorderThickness="0" FontSize="16">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
                <Style TargetType="{x:Type DataGridCell}" x:Key="CenterStyle" >
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.ContextMenu>
                <ContextMenu Name="AnimeContextMenu">
                    <MenuItem Name="Add" Header="Add (Single) ..." />
                    <MenuItem Name="AddMultiple" Header="Add (Multiple) ..." />
                    <MenuItem Name="Edit" Header="Edit ..." />
                    <MenuItem Name="Delete" Header="Delete ..." />
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Width="300" 
                                Binding="{Binding Path=Title}" />
                <DataGridTextColumn Header="Episode" CellStyle="{StaticResource CenterStyle}" Width="65" 
                                Binding="{Binding Path=Episode}"/>
                <DataGridTextColumn Header="Status" CellStyle="{StaticResource CenterStyle}" Width="auto" 
                                Binding="{Binding Path=Status}" />
                <DataGridTextColumn Header="Airing" CellStyle="{StaticResource CenterStyle}" Width="auto" 
                                Binding="{Binding Path=AiringSymbol}" SortMemberPath="AiringSymbol" />
                <DataGridTextColumn Header="Rating" CellStyle="{StaticResource CenterStyle}" Width="auto" 
                                Binding="{Binding Path=Rating}" SortMemberPath="SortedRating" />
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" x:Name="StatsLabel" HorizontalAlignment="Left" Margin="0" FontSize="16" />
            <ComboBox x:Name="FilterComboBox" Grid.Column="1" Height="25" Margin="0,0,0,-5" HorizontalContentAlignment="Center" >
                <ComboBoxItem Content="" IsSelected="True" />
                <ComboBoxItem Content="Airing/Watching" />
                <ComboBoxItem Content="Finished" />
                <ComboBoxItem Content="Dropped" />
            </ComboBox>
        </Grid>
        
    </Grid>
</UserControl>