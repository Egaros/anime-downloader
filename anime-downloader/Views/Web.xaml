<UserControl x:Class="anime_downloader.Views.Web"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:classes="clr-namespace:anime_downloader.Classes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ff="clr-namespace:anime_downloader.Classes.Xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:xaml="clr-namespace:anime_downloader.Classes.Xaml"
             d:DesignHeight="360"
             d:DesignWidth="680"
             mc:Ignorable="d">
    <UserControl.Resources>
        <xaml:BooleanSymbolConverter x:Key="WorksConverter" />
        <xaml:BooleanColorConverter x:Key="ColorConverter" />
        <xaml:BooleanOpacityConverter x:Key="OpacityConverter" />
        <Style x:Key="BoxStyle" TargetType="{x:Type GroupBox}">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="FontFamily" Value="{StaticResource MainFont}" />
        </Style>
        <Style x:Key="FontStyle">
            <Setter Property="RadioButton.FontFamily" Value="{StaticResource MainFont}" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.Background>White</Grid.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="11*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       FontSize="16"
                       Style="{DynamicResource FontStyle}"
                       TextAlignment="Justify"
                       TextWrapping="Wrap">
                Sync your anime list with your MyAnimeList profile and quickly visit pages.
            </TextBlock>

            <DockPanel Grid.Row="1">
                <GroupBox x:Name="MyAnimeListGroupbox"
                          d:DataContext="{d:DesignInstance classes:MyAnimeListLoginDetails}"
                          Header="MyAnimeList"
                          Style="{DynamicResource BoxStyle}">
                    <StackPanel Margin="3">
                        <DockPanel>
                            <GroupBox x:Name="LoginGroupBox" Header="Sync">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="4*" />
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Row="0"
                                           Grid.Column="0"
                                           Content="Username: " />
                                    <TextBox x:Name="UsernameTextbox"
                                             Grid.Row="0"
                                             Grid.Column="1"
                                             VerticalAlignment="Center"
                                             Text="{Binding Username}" />
                                    <Label Grid.Row="1"
                                           Grid.Column="0"
                                           Content="Password: " />
                                    <PasswordBox x:Name="PasswordPasswordBox"
                                                 Grid.Row="1"
                                                 Grid.Column="1"
                                                 VerticalAlignment="Center"
                                                 xaml:PasswordBoxAssistant.BindPassword="True"
                                                 xaml:PasswordBoxAssistant.BoundPassword="{Binding Path=Password,
                                                                                                   Mode=TwoWay,
                                                                                                   UpdateSourceTrigger=PropertyChanged}" />

                                    <Label Grid.Row="2"
                                           Grid.Column="0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Content="Logged in: " />

                                    <DockPanel Grid.Row="2" Grid.Column="1">
                                        <Label x:Name="LoggedIn"
                                               Content="{Binding Works,
                                                                 Converter={StaticResource WorksConverter}}"
                                               FontSize="22"
                                               Foreground="{Binding Works,
                                                                    Converter={StaticResource ColorConverter}}" />
                                    </DockPanel>
                                    <Label Grid.Row="3"
                                           Grid.Column="0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Content="Synced: " />

                                    <DockPanel Grid.Row="3" Grid.Column="1">
                                        <!--  Custom data context in code behind ...  -->
                                        <Label x:Name="SyncedUp" FontSize="22" />
                                        <DockPanel HorizontalAlignment="Right">
                                            <Button x:Name="LoginButton"
                                                    Margin="5"
                                                    Click="LoginButton_OnClick"
                                                    Style="{DynamicResource FeatureButtonStyle}">
                                                <TextBlock Margin="5">Login</TextBlock>
                                            </Button>
                                            <Button x:Name="ProfileButton"
                                                    Margin="5"
                                                    Click="ProfileButton_OnClick"
                                                    IsHitTestVisible="{Binding Works}"
                                                    Opacity="{Binding Works,
                                                                      Converter={StaticResource OpacityConverter}}"
                                                    Style="{DynamicResource FeatureButtonStyle}">
                                                <TextBlock Margin="5">Profile</TextBlock>
                                            </Button>
                                            <Button x:Name="SyncButton"
                                                    Margin="5"
                                                    Click="SyncButton_OnClick"
                                                    IsHitTestVisible="{Binding Works}"
                                                    Opacity="{Binding Works,
                                                                      Converter={StaticResource OpacityConverter}}"
                                                    Style="{DynamicResource SpecialButtonStyle}">
                                                <TextBlock Margin="5">Sync</TextBlock>
                                            </Button>
                                        </DockPanel>
                                    </DockPanel>
                                </Grid>
                            </GroupBox>
                        </DockPanel>
                        <GroupBox x:Name="SearchGroupBox"
                                  Header="Search "
                                  Style="{DynamicResource BoxStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="SearchTextBox"
                                         Grid.Column="0"
                                         Width="300"
                                         Margin="5"
                                         VerticalContentAlignment="Center"
                                         KeyDown="SearchTextBox_KeyDown" />

                                <DockPanel Grid.Column="1" HorizontalAlignment="Left">
                                    <Button x:Name="SearchButton"
                                            Margin="5"
                                            Click="SearchButton_OnClick"
                                            KeyDown="SearchButton_KeyDown"
                                            Style="{DynamicResource FeatureButtonStyle}">
                                        <TextBlock Margin="5">Search</TextBlock>
                                    </Button>

                                    <Button x:Name="FirstResultButton"
                                            Margin="5"
                                            Click="FirstResultButton_OnClick"
                                            Style="{DynamicResource FeatureButtonStyle}">
                                        <TextBlock Margin="5">First Result</TextBlock>
                                    </Button>
                                </DockPanel>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </GroupBox>

                <StackPanel>
                    <GroupBox x:Name="WebButtonsGroupBox"
                              Header="Launch Website"
                              Style="{DynamicResource BoxStyle}">
                        <StackPanel>
                            <Button x:Name="MyanimelistButton"
                                    Margin="5"
                                    Click="MyanimelistButton_Click"
                                    Style="{DynamicResource FeatureButtonStyle}">
                                <TextBlock Margin="5">MyAnimeList</TextBlock>
                            </Button>
                            <Button x:Name="AnichartButton"
                                    Margin="5"
                                    Click="AnichartButton_Click"
                                    Style="{DynamicResource FeatureButtonStyle}">
                                <TextBlock Margin="5">Anichart</TextBlock>
                            </Button>
                            <Button x:Name="NyaaButton"
                                    Margin="5"
                                    Click="NyaaButton_Click"
                                    Style="{DynamicResource FeatureButtonStyle}">
                                <TextBlock Margin="5">Nyaa</TextBlock>
                            </Button>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox VerticalAlignment="Bottom"
                              Header="Usage Notes"
                              Style="{DynamicResource BoxStyle}">
                        <Button x:Name="UsageButton"
                                Click="UsageButton_OnClick"
                                Style="{DynamicResource FeatureButtonStyle}">
                            <TextBlock Margin="5">Click me</TextBlock>
                        </Button>
                    </GroupBox>
                </StackPanel>
            </DockPanel>
        </Grid>
    </Grid>
</UserControl>