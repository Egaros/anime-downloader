<UserControl x:Class="anime_downloader.Views.Manage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:file="clr-namespace:anime_downloader.Classes.File"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:xaml="clr-namespace:anime_downloader.Classes.Xaml"
             xmlns:models="clr-namespace:anime_downloader.Models"
             d:DesignHeight="360"
             d:DesignWidth="680"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="FilterTextbox" TargetType="TextBox">
            <Setter Property="Width" Value="150" />
            <Setter Property="Height" Value="25" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Tag" Value="Filter by name ..." />
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <TextBox x:Name="textSource"
                                     Panel.ZIndex="2"
                                     Background="Transparent"
                                     Text="{Binding Path=Text,
                                                    RelativeSource={RelativeSource TemplatedParent},
                                                    Mode=TwoWay,
                                                    UpdateSourceTrigger=PropertyChanged}" />
                            <TextBox Panel.ZIndex="1"
                                     Background="{TemplateBinding Background}"
                                     Text="{TemplateBinding Tag}">
                                <TextBox.Style>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="Foreground" Value="Transparent" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=Text, Source={x:Reference textSource}}" Value="">
                                                <Setter Property="Foreground" Value="LightGray" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ContextMenu x:Key="RightClickMenu">
            <MenuItem Click="Context_Move_Click" Header="Move to watched" />
            <MenuItem Click="Context_Profile_Click" Header="Go to profile" />
            <MenuItem Click="Context_Open_Click" Header="Open" />
            <MenuItem Click="Context_Delete_Click" Header="Delete" />
        </ContextMenu>

        <Style x:Key="EpisodeHolder" TargetType="{x:Type ListBox}">
            <Setter Property="FontFamily" Value="{StaticResource MainFont}" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="xaml:DragSelectionHelper.IsDragSelecting" Value="False" />
            <Setter Property="ContextMenu" Value="{StaticResource RightClickMenu}" />
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock d:DataContext="{d:DesignInstance Type=models:AnimeFile}" Text="{Binding StrippedFilename}" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="xaml:DragSelectionHelper.IsDragSelecting" Value="True" />
                            </Trigger>
                        </Style.Triggers>
                        <EventSetter Event="GotFocus" Handler="ListBoxItem_GotFocus" />
                    </Style>
                </Setter.Value>
            </Setter>
            <EventSetter Event="KeyUp" Handler="Listbox_KeyUp" />
            <EventSetter Event="MouseDoubleClick" Handler="Context_MouseDoubleClick" />

        </Style>

        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="Segoe UI Symbol" />
        </Style>

        <Style x:Key="DescriptionStyle" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Opacity" Value="0.4" />
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="Segoe UI Symbol" />
        </Style>

        <Style TargetType="Rectangle">
            <Setter Property="Height" Value="25" />
            <Setter Property="Width" Value="25" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.6" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="Opacity" Value="1.0" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>White</Grid.Background>
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="9*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       FontFamily="{StaticResource MainFont}"
                       FontSize="16">
                Manage and move episodes from your download directory to the watched directory.
            </TextBlock>

            <Grid Grid.Row="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="30*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="13*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" Grid.Column="0">
                        <Label Content="Unwatched"
                               MouseUp="Unwatched_Label_OnMouseUp"
                               Style="{DynamicResource LabelStyle}" />
                        <Label Content="{Binding UnwatchedLabel}" Style="{DynamicResource DescriptionStyle}" />
                    </DockPanel>

                    <ListBox x:Name="Unwatched"
                             Grid.Row="1"
                             Grid.Column="0"
                             xaml:DragSelectionHelper.IsDragSelectionEnabled="true"
                             ItemsSource="{Binding UnwatchedEpisodes}"
                             Style="{StaticResource EpisodeHolder}" />

                    <Grid Grid.Row="2" Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 KeyUp="FindTextBox_KeyUp"
                                 Style="{DynamicResource FilterTextbox}" />

                        <Grid Grid.Column="1">
                            <DockPanel>
                                <Rectangle MouseDown="Button_Move_Click">
                                    <Rectangle.Fill>
                                        <ImageBrush ImageSource="../Resources/Images/right.png" />
                                    </Rectangle.Fill>
                                </Rectangle>
                            </DockPanel>
                        </Grid>
                    </Grid>
                </Grid>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="13*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0"
                           Content="Watched"
                           MouseUp="Watched_Label_OnMouseUp"
                           Style="{DynamicResource LabelStyle}" />

                    <ListBox x:Name="Watched"
                             Grid.Row="1"
                             xaml:DragSelectionHelper.IsDragSelectionEnabled="true"
                             ItemsSource="{Binding WatchedEpisodes}"
                             Style="{StaticResource EpisodeHolder}" />

                    <Grid Grid.Row="2">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <TextBox KeyUp="FindTextBox_KeyUp" Style="{DynamicResource FilterTextbox}" />

                        <Grid Grid.Column="1">
                            <DockPanel>
                                <Rectangle MouseDown="Button_Move_Click">
                                    <Rectangle.Fill>
                                        <ImageBrush ImageSource="../Resources/Images/left.png" />
                                    </Rectangle.Fill>
                                </Rectangle>
                            </DockPanel>
                        </Grid>
                    </Grid>
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</UserControl>