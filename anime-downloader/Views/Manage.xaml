<UserControl x:Class="anime_downloader.Views.Manage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:file="clr-namespace:anime_downloader.Classes.File"
             xmlns:xaml="clr-namespace:anime_downloader.Classes.Xaml"
             mc:Ignorable="d"
             d:DesignHeight="360" d:DesignWidth="680">
    <UserControl.Resources>
        <Style x:Key="ListboxStyle" TargetType="ListBox">
            <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style x:Key="TextboxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="150" />
            <Setter Property="Height" Value="25" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Tag" Value="Filter  by name ..." />
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <TextBox
                                Text="{Binding Path=Text, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                x:Name="textSource"
                                Background="Transparent"
                                Panel.ZIndex="2" />
                            <TextBox Text="{TemplateBinding Tag}" Background="{TemplateBinding Background}"
                                     Panel.ZIndex="1">
                                <TextBox.Style>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="Foreground" Value="Transparent" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=Text, Source={x:Reference textSource}}"
                                                         Value="">
                                                <Setter Property="Foreground" Value="LightGray" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="Segoe UI Symbol" />
        </Style>
        <Style x:Key="DescriptionStyle" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Opacity" Value="0.4" />
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="Segoe UI Symbol" />
        </Style>
        <Style x:Key="ButtonStyle" TargetType="Rectangle">
            <Setter Property="Height" Value="25" />
            <Setter Property="Width" Value="25" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <Style TargetType="{x:Type ListBoxItem}">
            <Setter Property="xaml:DragSelectionHelper.IsDragSelecting" Value="False" />
            <Style.Triggers>
                <Trigger Property="ListBoxItem.IsMouseOver" Value="True">
                    <Setter Property="xaml:DragSelectionHelper.IsDragSelecting" Value="True" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.Background>White</Grid.Background>
        <Grid>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="9*" />
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" FontFamily="{StaticResource MainFont}" FontSize="16">
                Manage and move episodes from your downloaded directory to the Watched directory.
            </TextBlock>
            
            <Grid Grid.Row="1">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="30*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="13*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>
                    <DockPanel Grid.Column="0" Grid.Row="0">
                        <Label Style="{DynamicResource LabelStyle}" Content="Unwatched" />
                        <Label Style="{DynamicResource DescriptionStyle}" Name="UnwatchedFilesLabel" />
                    </DockPanel>
                    <ListBox x:Name="UnwatchedList" Grid.Row="1" Grid.Column="0" Style="{StaticResource ListboxStyle}" 
                             xaml:DragSelectionHelper.IsDragSelectionEnabled="true"
                             MouseDoubleClick="Context_MouseDoubleClick" 
                             KeyUp="Listbox_KeyUp">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Move to watched" Click="Context_Move_Click" />
                                <MenuItem Header="Go to profile" Click="Context_Profile_Click" />
                                <MenuItem Header="Open" Click="Context_Open_Click" />
                                <MenuItem Header="Delete" Click="Context_Delete_Click" />
                            </ContextMenu>
                        </ListBox.ContextMenu>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <WrapPanel d:DataContext="{d:DesignInstance Type=file:AnimeEpisode }">
                                    <TextBlock Text="{Binding StrippedFilename}" />
                                </WrapPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Grid Grid.Row="2" Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" Style="{DynamicResource TextboxStyle}" KeyUp="FindTextBox_KeyUp" />

                        <Grid Grid.Column="1">
                            <DockPanel>
                                <Rectangle Style="{DynamicResource ButtonStyle}" MouseEnter="MouseEnterItem" MouseLeave="MouseLeaveItem" MouseDown="Button_Move_Click">
                                    <Rectangle.Fill>
                                        <ImageBrush ImageSource="../Resources/Images/right.png" />
                                    </Rectangle.Fill>
                                </Rectangle>
                            </DockPanel>
                        </Grid>
                    </Grid>
                </Grid>
                
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="13*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Style="{DynamicResource LabelStyle}" Content="Watched" />
                    <ListBox x:Name="WatchedList" Grid.Row="1" Style="{StaticResource ListboxStyle}" 
                             xaml:DragSelectionHelper.IsDragSelectionEnabled="true"
                             MouseDoubleClick="Context_MouseDoubleClick" 
                             KeyUp="Listbox_KeyUp">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Move to unwatched" Click="Context_Move_Click" />
                                <MenuItem Header="Go to profile" Click="Context_Profile_Click" />
                                <MenuItem Header="Open" Click="Context_Open_Click" />
                                <MenuItem Header="Delete" Click="Context_Delete_Click" />
                            </ContextMenu>
                        </ListBox.ContextMenu>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <WrapPanel d:DataContext="{d:DesignInstance Type=file:AnimeEpisode }">
                                    <TextBlock Text="{Binding StrippedFilename}" />
                                </WrapPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Grid Grid.Row="2">
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <TextBox Style="{DynamicResource TextboxStyle}" KeyUp="FindTextBox_KeyUp" />
                        
                        <Grid Grid.Column="1">
                            <DockPanel>
                                <Rectangle Style="{DynamicResource ButtonStyle}" MouseEnter="MouseEnterItem" MouseLeave="MouseLeaveItem" MouseDown="Button_Move_Click">
                                    <Rectangle.Fill>
                                        <ImageBrush ImageSource="../Resources/Images/left.png" />
                                    </Rectangle.Fill>
                                </Rectangle>
                            </DockPanel>
                        </Grid>
                    </Grid>
                </Grid>
                
            </Grid>
        </Grid>
    </Grid>
</UserControl>