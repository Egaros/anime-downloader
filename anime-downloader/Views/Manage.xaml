<UserControl x:Class="anime_downloader.Views.Manage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:file="clr-namespace:anime_downloader.Classes.File"
             xmlns:xaml="clr-namespace:anime_downloader.Classes.Xaml"
             mc:Ignorable="d"
             d:DesignHeight="360" d:DesignWidth="680">
    <UserControl.Resources>
        <Style x:Key="TextboxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="150" />
            <Setter Property="Height" Value="25" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Tag" Value="Filter  by name ..." />
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <TextBox
                                Text="{Binding Path=Text, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                x:Name="textSource"
                                Background="Transparent"
                                Panel.ZIndex="2" />
                            <TextBox Text="{TemplateBinding Tag}" Background="{TemplateBinding Background}"
                                     Panel.ZIndex="1">
                                <TextBox.Style>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="Foreground" Value="Transparent" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=Text, Source={x:Reference textSource}}"
                                                         Value="">
                                                <Setter Property="Foreground" Value="LightGray" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="Segoe UI Symbol" />
        </Style>
        <Style x:Key="DescriptionStyle" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Opacity" Value="0.4" />
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="Segoe UI Symbol" />
        </Style>
        <Style x:Key="ButtonStyle" TargetType="Rectangle">
            <Setter Property="Height" Value="25" />
            <Setter Property="Width" Value="25" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <!--

            <Setter Property="Stroke" Value="Gray" />
            <Setter Property="StrokeThickness" Value="0.5" />
            <Setter Property="RadiusX" Value="25" />
            <Setter Property="RadiusY" Value="25" />
            -->
        </Style>
        <Style TargetType="{x:Type ListBoxItem}">
            <Setter Property="xaml:DragSelectionHelper.IsDragSelecting" Value="False" />
            <Style.Triggers>
                <Trigger Property="ListBoxItem.IsMouseOver" Value="True">
                    <Setter Property="xaml:DragSelectionHelper.IsDragSelecting" Value="True" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.Background>White</Grid.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="9*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" FontFamily="{StaticResource MainFont}" FontSize="16">
                Manage and move episodes from your downloaded directory to the Watched directory.
            </TextBlock>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="30*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="13*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>

                <DockPanel Grid.Column="0" Grid.Row="0">
                    <Label Style="{DynamicResource LabelStyle}" Content="Unwatched" />
                    <Label x:Name="UnwatchedFilesLabel" Style="{DynamicResource DescriptionStyle}" />
                </DockPanel>
                <ListBox x:Name="UnwatchedList" Grid.Row="1" Grid.Column="0" FontFamily="{StaticResource MainFont}"
                         FontSize="16" xaml:DragSelectionHelper.IsDragSelectionEnabled="true"
                         MouseDoubleClick="Context_MouseDoubleClick" KeyUp="Listbox_KeyUp">
                    <ListBox.ContextMenu>
                        <ContextMenu Name="UnwatchedContextMenu">
                            <MenuItem Name="UnwatchedMoveWatched" Header="Move to Watched" />
                            <MenuItem Name="UnwatchedOpen" Header="Open" Click="ContextOpen_Click" />
                            <MenuItem Name="UnwatchedDelete" Header="Delete" Click="ContextDelete_Click" />
                        </ContextMenu>
                    </ListBox.ContextMenu>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <WrapPanel d:DataContext="{d:DesignInstance Type=file:AnimeEpisode }">
                                <TextBlock Text="{Binding Name}" />
                                <TextBlock Text=" - " />
                                <TextBlock Text="{Binding Episode}" />
                            </WrapPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Grid Grid.Row="2" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="UnwatchedFindTextBox" Grid.Column="0" Style="{DynamicResource TextboxStyle}"
                             KeyUp="UnwatchedFindTextBox_KeyUp" />

                    <Grid x:Name="UnwatchedPanel" Grid.Column="1">
                        <DockPanel>
                            <Rectangle x:Name="MoveRight" Style="{DynamicResource ButtonStyle}"
                                       MouseEnter="MouseEnterItem" MouseLeave="MouseLeaveItem">
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="../Resources/Images/right.png" />
                                </Rectangle.Fill>
                            </Rectangle>
                        </DockPanel>
                    </Grid>
                </Grid>

                <Label Grid.Column="2" Grid.Row="0" Style="{DynamicResource LabelStyle}" Content="Watched" />
                <ListBox x:Name="WatchedList" Grid.Row="1" Grid.Column="2" FontFamily="{StaticResource MainFont}"
                         FontSize="16" xaml:DragSelectionHelper.IsDragSelectionEnabled="true"
                         MouseDoubleClick="Context_MouseDoubleClick" KeyUp="Listbox_KeyUp">
                    <ListBox.ContextMenu>
                        <ContextMenu Name="WatchedContextMenu">
                            <MenuItem Name="WatchedMoveUnwatched" Header="Move To Unwatched " />
                            <MenuItem Name="WatchedOpen" Header="Open" Click="ContextOpen_Click" />
                            <MenuItem Name="WatchedDelete" Header="Delete" Click="ContextDelete_Click" />
                        </ContextMenu>
                    </ListBox.ContextMenu>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <WrapPanel d:DataContext="{d:DesignInstance Type=file:AnimeEpisode }">
                                <TextBlock Text="{Binding Name}" />
                                <TextBlock Text=" - " />
                                <TextBlock Text="{Binding Episode}" />
                            </WrapPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Grid Grid.Row="2" Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="WatchedFindTextBox" Grid.Row="0" Grid.Column="0"
                             Style="{DynamicResource TextboxStyle}" KeyUp="WatchedFindTextBox_KeyUp" />
                    <Grid x:Name="WatchedPanel" Grid.Column="1">
                        <DockPanel>
                            <Rectangle x:Name="MoveLeft" Style="{DynamicResource ButtonStyle}"
                                       MouseEnter="MouseEnterItem" MouseLeave="MouseLeaveItem">
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="../Resources/Images/left.png" />
                                </Rectangle.Fill>
                            </Rectangle>
                        </DockPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>