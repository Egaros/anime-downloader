<UserControl x:Class="anime_downloader.Views.Misc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="360" d:DesignWidth="680">
    <UserControl.Resources>
        <Style x:Key="BoxStyle" TargetType="{x:Type GroupBox}">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="FontFamily" Value="Yu Gothic"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.Background>White</Grid.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <GroupBox x:Name="GroupBox" Header="Indexing options (for 'Airing' and 'Watching' shows)"
                      Style="{DynamicResource BoxStyle}"
                      VerticalAlignment="Top">
                    <StackPanel Margin="5">
                        <RadioButton Name="RadioDuplicates" VerticalContentAlignment="Center">
                            <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Move duplicates to a "Duplicates" folder</TextBlock>
                        </RadioButton>
                        <RadioButton Name="RadioIndexLastWatched" VerticalContentAlignment="Center">
                            <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Set episode count to last episode number in "watched" folder</TextBlock>
                        </RadioButton>
                        <RadioButton Name="RadioIndexLastUnwatched" VerticalContentAlignment="Center">
                            <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Set episode count to last episode number in episode folders</TextBlock>
                        </RadioButton>
                        <RadioButton Name="RadioIndexFirstWatched" VerticalContentAlignment="Center">
                            <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Set episode count to first known episode value</TextBlock>
                        </RadioButton>
                        <RadioButton Name="RadioIndexZero" VerticalContentAlignment="Center">
                            <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Set episode count to zero</TextBlock>
                        </RadioButton>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
            <Button x:Name="ButtonSubmit" Grid.Row="1" Content="Submit" Style="{DynamicResource ConfirmationButtonStyle}" HorizontalAlignment="Right" />
        </Grid>
    </Grid>
</UserControl>