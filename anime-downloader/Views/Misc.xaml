<UserControl x:Class="anime_downloader.Views.Misc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="360" d:DesignWidth="680">
    <UserControl.Resources>
        <Style x:Key="BoxStyle" TargetType="{x:Type GroupBox}">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="FontFamily" Value="{StaticResource MainFont}" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.Background>White</Grid.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <GroupBox x:Name="GroupBox"
                          Header="Indexing options (for each show that is both 'airing' and 'watching')"
                          Style="{DynamicResource BoxStyle}"
                          VerticalAlignment="Top">
                    <StackPanel Margin="5">
                        <RadioButton Name="DuplicatesRadio" VerticalContentAlignment="Center" KeyDown="Radio_KeyDown">
                            <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Move duplicates to your "My Videos" folder</TextBlock>
                        </RadioButton>
                        <RadioButton Name="LastWatchedRadio" VerticalContentAlignment="Center"
                                     KeyDown="Radio_KeyDown">
                            <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Set episode to last found episode number in the watched folder</TextBlock>
                        </RadioButton>
                        
                        <RadioButton Name="LastUnwatchedRadio" VerticalContentAlignment="Center"
                                     KeyDown="Radio_KeyDown">
                            <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Set episode to last found episode number in the episodes folder</TextBlock>
                        </RadioButton>

                        <RadioButton Name="LastAnyRadio" VerticalContentAlignment="Center"
                                     KeyDown="Radio_KeyDown">
                            <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Set episode to last found episode number in any folder</TextBlock>
                        </RadioButton>

                        <RadioButton Name="FirstWatchedRadio" VerticalContentAlignment="Center"
                                     KeyDown="Radio_KeyDown">
                            <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Set episode to first known episode value in any folder</TextBlock>
                        </RadioButton>
                        <RadioButton Name="ZeroRadio" VerticalContentAlignment="Center" KeyDown="Radio_KeyDown">
                            <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Set episode to zero</TextBlock>
                        </RadioButton>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
            <Button x:Name="ButtonSubmit" Grid.Row="1" Content="Submit"
                    Style="{DynamicResource ConfirmationButtonStyle}" HorizontalAlignment="Right" />
        </Grid>
    </Grid>
</UserControl>