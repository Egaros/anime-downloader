<UserControl x:Class="anime_downloader.Views.Misc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="360" d:DesignWidth="680">
    <UserControl.Resources>
        <Style x:Key="BoxStyle" TargetType="{x:Type GroupBox}">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="FontFamily" Value="{StaticResource MainFont}" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.Background>White</Grid.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <GroupBox x:Name="GroupBox"
                          Header="Indexing"
                          Style="{DynamicResource BoxStyle}"
                          VerticalAlignment="Top">
                    <StackPanel Margin="5">

                        <Label Content="For every anime that is airing and being watched ..."/>
                        <Label Content="--- Set current episode to the LAST found episode in ..."/>
                    
                        <RadioButton Name="LastWatchedRadio" VerticalContentAlignment="Center"
                                        KeyDown="Radio_KeyDown">
                            <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Watched folder</TextBlock>
                        </RadioButton>

                        <RadioButton Name="LastUnwatchedRadio" VerticalContentAlignment="Center"
                                        KeyDown="Radio_KeyDown">
                            <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Episodes folder</TextBlock>
                        </RadioButton>

                        <RadioButton Name="LastAnyRadio" VerticalContentAlignment="Center"
                                        KeyDown="Radio_KeyDown">
                            <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Any folder</TextBlock>
                        </RadioButton>

                        <Label Content="--- Set current episode to the FIRST found episode in ..."/>

                        <RadioButton Name="FirstWatchedRadio" VerticalContentAlignment="Center"
                                     KeyDown="Radio_KeyDown">
                            <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Any folder</TextBlock>
                        </RadioButton>

                        <Label Content="---"/>

                        <RadioButton Name="ZeroRadio" VerticalContentAlignment="Center" KeyDown="Radio_KeyDown">
                            <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Set episode to zero</TextBlock>
                        </RadioButton>

                        <RadioButton Name="DuplicatesRadio" VerticalContentAlignment="Center" KeyDown="Radio_KeyDown">
                            <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Move any found duplicates to "My Videos" folder</TextBlock>
                        </RadioButton>

                        <RadioButton Name="MarkCompleteRadio" VerticalContentAlignment="Center" KeyDown="Radio_KeyDown">
                            <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Change status of animes that you have downloaded every episode for as complete</TextBlock>
                        </RadioButton> 

                    </StackPanel>
                </GroupBox>
            </StackPanel>
            <Button x:Name="ButtonSubmit" Grid.Row="1" Content="Submit"
                    Style="{DynamicResource ConfirmationButtonStyle}" HorizontalAlignment="Right" />
        </Grid>
    </Grid>
</UserControl>