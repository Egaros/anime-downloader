<UserControl x:Class="anime_downloader.Views.Misc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="330" d:DesignWidth="650">
    <Grid>
        <Grid.Background>White</Grid.Background>
        <GroupBox x:Name="GroupBox" Header="Miscellaneous options" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top">
            <StackPanel Margin="10" >
                <RadioButton Name="RadioDownload" VerticalContentAlignment="Center">
                    <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Find and download any missing episodes between known starting episode and known last episode</TextBlock>
                </RadioButton>
                <RadioButton Name="RadioCatchUp" VerticalContentAlignment="Center">
                    <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Continually download from now until no more episodes are found for each airing series (Useful for catching up).</TextBlock>
                </RadioButton>
                <RadioButton Name="RadioDuplicates" VerticalContentAlignment="Center">
                    <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Move duplicates to a "Duplicates" folder to be handled by user</TextBlock>
                </RadioButton>
                <RadioButton Name="RadioIndexLastWatched" VerticalContentAlignment="Center">
                    <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Set episode counts of shows being watched to last episode number in "Watched" folder</TextBlock>
                </RadioButton>
                <RadioButton Name="RadioIndexLastUnwatched" VerticalContentAlignment="Center">
                    <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Set episode counts of shows being watched to last episode number in episode folders</TextBlock>
                </RadioButton>
                <RadioButton Name="RadioIndexFirstWatched" VerticalContentAlignment="Center">
                    <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Set episode counts of shows being watched to first known episode value</TextBlock>
                </RadioButton>
                <RadioButton Name="RadioIndexZero" VerticalContentAlignment="Center">
                    <TextBlock TextWrapping="Wrap" Margin="10,0,0,0">Set episode counts of shows being watched to 0</TextBlock>
                </RadioButton>
            </StackPanel>
        </GroupBox>
        <Button x:Name="ButtonSubmit" Content="Submit" HorizontalAlignment="Left" Margin="565,300,0,0" VerticalAlignment="Top" Width="75"/>


    </Grid>
</UserControl>
